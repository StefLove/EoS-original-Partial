@model EoS.Models.Admin.InvestorMessage

@*@{
    Layout = null;
}*@

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete investor Message</title>
</head>
<body>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Investor message</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Text)
            </dt>  
            <dd>
                @*@Html.DisplayFor(model => model.Text)*@
                <div style="border-style:solid; border-width:1px" title="HTML">@Html.Raw(Model.Text)</div>
            </dd>   
        </dl>
    
        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
    
            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" />&nbsp;&nbsp;
                @Html.ActionLink("Back to Investor message index", "Index")
            </div>
        }
    </div>
</body>
</html>
