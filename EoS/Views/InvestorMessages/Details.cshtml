@model EoS.Models.Admin.InvestorMessage

@*@{
    Layout = null;
}*@

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Investor message details</title>
</head>
<body>

    <div>
        <h4>Investor message details</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Text)
            </dt>   
            <dd>
                @*@Html.DisplayFor(model => model.Text)*@
                <div style="border-style:solid; border-width:1px" title="HTML">@Html.Raw(Model.Text)</div>
            </dd>    
        </dl>
    </div>
    <p>
        @Html.ActionLink("Back to Investor message index", "Index") |
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = Model.Id }, new { @style = "color:red" })
    </p>

</body>
</html>
