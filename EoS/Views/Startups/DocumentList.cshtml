@model IEnumerable<EoS.Models.IdeaCarrier.Document>
@using Microsoft.AspNet.Identity

@if (Model.Any())
{
   

    <table class='List-item table' style="text-align: left">
        <tr>

            <th>Name </th>
            <th>Description </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr >
                <td>
                    @item.DocName
                </td>
                <td>
                    @item.DocDescription
                </td>
                <td style="width: 16px;">
                    <a href="/Upload/@item.DocURL">
                        <span class="glyphicon glyphicon-eye-open" style="font-size:22px" title="Open"></span>
                    </a>
                </td>
                <td style="width: 16px;">
                    @Html.ActionLink(" ", "DownloadDocument", "Startups", new { docLink = @item.DocURL, name = @item.StartupID+'_'+@item.DocName}, new { @class = "glyphicon glyphicon-download", style = "font-size:22px;", title = "Download" })
                </td>
                @if (User.IsInRole("Admin") || ViewBag.locked == false && User.Identity.GetUserId() == item.UserId)
                {
                    <td style="width: 16px;">
                        @Html.ActionLink(" ", "DeleteDocument", "Startups", new { docId = @item.DocId, docLink = @item.DocURL }, new { @class = "btn-danger glyphicon glyphicon-trash", style = "font-size:20px; height:25px; background-color:white; color:red;", title = "Delete", onclick = "return confirm('Are you sure you want to delete this file?');" })
                    </td>
                }

            </tr>
        }
    </table>
}
