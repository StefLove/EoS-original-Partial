        <div class="checkbox col-md-10">
            @Html.EditorFor(model => model.WillSpendOwnMoney)
            @Html.ValidationMessageFor(model => model.WillSpendOwnMoney, "", new { @class = "text-danger" })
        </div>
    </div>
</div>    

