@model EoS.Models.Investor.InvestmentEditAdminViewModel

@{
    ViewBag.Title = "Edit Investment profile "+ Model.InvestmentID + " belonging to " + Model.InvestorUserName + " (Admins only)";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3>@ViewBag.Title</h3>
        <hr />

        @Html.HiddenFor(model => model.InvestmentID)

        <div class="form-group">
            @Html.LabelFor(model => model.DueDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.DueDate, new { htmlAttributes = new { @class = "form-control date-picker" @*, @onkeydown = "return false", @onpaste = "return false"*@} })
                    @Html.ValidationMessageFor(model => model.DueDate, "", new { @class = "text-danger" })          
                    <input type="button" value="Set date 6 months ahead" onclick="setMonthsAhead(6)" class="btn btn-primary" style="height:25px;padding:1px" />&nbsp;&nbsp;<input type="button" value="Set date 1 year ahead" onclick="setMonthsAhead(12)" class="btn btn-primary" style="height:25px;padding:1px" /><br />
                    <input type="button" value="Set Due date none (Profile free of charge)" onclick="setMonthsAhead(0)" class="btn btn-primary" style="height:25px;padding:1px" />
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Locked, htmlAttributes: new { @class = "control-label col-md-2", @style = "text-align:left" })
            <div class="col-md-9">
                <div class="checkbox col-md-10">
                    @Html.EditorFor(model => model.Locked)
                    @Html.ValidationMessageFor(model => model.Locked, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">              
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>

    </div>
}

<div class="hidden-print">
    @Html.ActionLink("Back to Investment profiles by " + Model.InvestorUserName, "Index", new { id = Model.InvestorUserID }) |
    @Html.ActionLink("Details", "Details", new { id = Model.InvestmentID })
</div>

<script>

    function setMonthsAhead(months) {
        if (months === 0) document.getElementById("DueDate").value = null;
        else {
            var newDate = new Date();
            newDate.setMonth(newDate.getMonth() + months);
            document.getElementById("DueDate").value = newDate.toLocaleDateString();
        }       
    }

</script>